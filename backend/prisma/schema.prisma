generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DATABASE_URL")  // For pooled connections
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  name      String
  dob       DateTime
  age       Int
  resumeUrl String?
  matches   Matches[]
}

model Employer {
  id             Int       @id @default(autoincrement())
  email          String    @unique
  password       String
  companyName    String
  requirement    String?
  requirementUrl String?
  matches        Matches[]
}

model Matches {
  id          Int      @id @default(autoincrement())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  employer    Employer @relation(fields: [employerId], references: [id])
  employerId  Int
  requirement String?

  score Int
  match Boolean
}

model Jobs {
  id        Int      @id @default(autoincrement())
  jobid     Int
  jobPoster String
  title     String
  date_time DateTime
  ApplyUrl  String
}
